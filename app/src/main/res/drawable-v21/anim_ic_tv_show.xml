<?xml version="1.0" encoding="utf-8"?>
<animated-selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:id="@+id/stateOn" android:state_checked="true"
        android:drawable="@drawable/ic_tv_show"/>

    <item android:id="@+id/stateOff"
        android:drawable="@drawable/ic_tv_show_off"/>

    <transition
        android:drawable="@drawable/ic_tv_show"
        android:fromId="@id/stateOff"
        android:toId="@id/stateOn"/>

</animated-selector>